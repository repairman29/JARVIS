{
  "name": "window-manager",
  "version": "1.0.0",
  "description": "Advanced window management: snap, resize, organize windows across displays",
  "env": [],
  "tools": [
    {
      "name": "snap_window",
      "description": "Snap active window to screen position (left/right half, quarters, center, maximize)",
      "parameters": {
        "type": "object",
        "properties": {
          "position": {
            "type": "string",
            "description": "Window snap position",
            "enum": [
              "left_half", "right_half", "top_half", "bottom_half",
              "top_left", "top_right", "bottom_left", "bottom_right",
              "center", "maximize", "minimize",
              "left_third", "center_third", "right_third",
              "left_two_thirds", "right_two_thirds"
            ]
          },
          "app": {
            "type": "string",
            "description": "Specific app name to snap (if not provided, uses active window)"
          },
          "display": {
            "type": "number",
            "description": "Display number (0 = primary, 1 = secondary, etc.)"
          }
        },
        "required": ["position"]
      }
    },
    {
      "name": "move_window",
      "description": "Move window to specific display or between displays",
      "parameters": {
        "type": "object",
        "properties": {
          "direction": {
            "type": "string",
            "description": "Direction to move window",
            "enum": ["next_display", "previous_display", "primary_display"]
          },
          "app": {
            "type": "string",
            "description": "Specific app name to move (if not provided, uses active window)"
          },
          "targetDisplay": {
            "type": "number",
            "description": "Specific display number to move to"
          }
        },
        "required": ["direction"]
      }
    },
    {
      "name": "resize_window",
      "description": "Resize window to specific dimensions or relative to current size",
      "parameters": {
        "type": "object",
        "properties": {
          "width": {
            "type": "number",
            "description": "Width in pixels or percentage (1-100 for percentage)"
          },
          "height": {
            "type": "number",
            "description": "Height in pixels or percentage (1-100 for percentage)"
          },
          "relative": {
            "type": "boolean",
            "description": "True for percentage-based resize, false for absolute pixels",
            "default": false
          },
          "app": {
            "type": "string",
            "description": "Specific app name to resize (if not provided, uses active window)"
          }
        }
      }
    },
    {
      "name": "get_window_info",
      "description": "Get information about windows: active window, all windows, or windows for specific app",
      "parameters": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of window info to retrieve",
            "enum": ["active", "all", "app_windows", "display_info"],
            "default": "active"
          },
          "app": {
            "type": "string",
            "description": "App name for app_windows type"
          }
        }
      }
    },
    {
      "name": "window_focus",
      "description": "Focus/activate a specific window or app",
      "parameters": {
        "type": "object",
        "properties": {
          "app": {
            "type": "string",
            "description": "App name to focus"
          },
          "windowTitle": {
            "type": "string",
            "description": "Specific window title to focus (optional)"
          }
        },
        "required": ["app"]
      }
    },
    {
      "name": "window_arrangement",
      "description": "Arrange multiple windows in predefined layouts (tiling)",
      "parameters": {
        "type": "object",
        "properties": {
          "layout": {
            "type": "string",
            "description": "Window arrangement layout",
            "enum": [
              "two_column", "three_column", "grid_2x2",
              "main_and_stack", "full_height_splits",
              "cascade", "minimize_all", "restore_all"
            ]
          },
          "apps": {
            "type": "array",
            "description": "Specific apps to include in arrangement (optional)",
            "items": {
              "type": "string"
            }
          },
          "display": {
            "type": "number",
            "description": "Display to arrange windows on",
            "default": 0
          }
        },
        "required": ["layout"]
      }
    },
    {
      "name": "workspace_save",
      "description": "Save current window arrangement as a workspace preset",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name for the workspace preset"
          },
          "description": {
            "type": "string",
            "description": "Optional description of the workspace"
          }
        },
        "required": ["name"]
      }
    },
    {
      "name": "workspace_restore",
      "description": "Restore a previously saved workspace arrangement",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of workspace preset to restore"
          },
          "launchApps": {
            "type": "boolean",
            "description": "Launch missing apps if needed",
            "default": true
          }
        },
        "required": ["name"]
      }
    },
    {
      "name": "workspace_list",
      "description": "List all saved workspace presets",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ]
}