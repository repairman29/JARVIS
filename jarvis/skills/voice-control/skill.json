{
  "name": "voice-control",
  "version": "1.0.0",
  "description": "Voice control and hands-free operation for JARVIS with wake word detection and speech recognition",
  "env": ["JARVIS_VOICE_WAKE_WORD", "JARVIS_VOICE_ENABLED", "JARVIS_VOICE_LANGUAGE", "JARVIS_VOICE_CONFIDENCE_THRESHOLD"],
  "tools": [
    {
      "name": "start_voice_recognition",
      "description": "Start continuous voice recognition with wake word detection",
      "parameters": {
        "type": "object",
        "properties": {
          "wakeWord": {
            "type": "string",
            "description": "Wake word to activate JARVIS (default: 'Hey JARVIS')",
            "default": "Hey JARVIS"
          },
          "language": {
            "type": "string",
            "description": "Speech recognition language",
            "enum": ["en-US", "en-GB", "en-AU", "es-ES", "fr-FR", "de-DE", "it-IT", "pt-BR"],
            "default": "en-US"
          },
          "confidenceThreshold": {
            "type": "number",
            "description": "Minimum confidence level for speech recognition (0.0-1.0)",
            "default": 0.7
          },
          "continuousListening": {
            "type": "boolean",
            "description": "Keep listening after wake word activation",
            "default": true
          },
          "timeout": {
            "type": "number",
            "description": "Timeout for voice command in seconds",
            "default": 10
          }
        }
      }
    },
    {
      "name": "stop_voice_recognition",
      "description": "Stop voice recognition and wake word detection",
      "parameters": {
        "type": "object",
        "properties": {
          "saveSession": {
            "type": "boolean",
            "description": "Save voice session data for analysis",
            "default": false
          }
        }
      }
    },
    {
      "name": "voice_command",
      "description": "Process a voice command directly (for testing or manual input)",
      "parameters": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Voice command text to process"
          },
          "confidence": {
            "type": "number",
            "description": "Confidence level of speech recognition",
            "default": 1.0
          },
          "skipWakeWord": {
            "type": "boolean",
            "description": "Skip wake word requirement",
            "default": false
          }
        },
        "required": ["command"]
      }
    },
    {
      "name": "configure_voice",
      "description": "Configure voice recognition settings and preferences",
      "parameters": {
        "type": "object",
        "properties": {
          "setting": {
            "type": "string",
            "description": "Setting to configure",
            "enum": ["wake_word", "language", "confidence", "timeout", "voice_feedback", "privacy_mode"]
          },
          "value": {
            "type": "string",
            "description": "New value for the setting"
          },
          "testSetting": {
            "type": "boolean",
            "description": "Test the new setting immediately",
            "default": false
          }
        },
        "required": ["setting", "value"]
      }
    },
    {
      "name": "voice_training",
      "description": "Train voice recognition for better accuracy with user's voice and commands",
      "parameters": {
        "type": "object",
        "properties": {
          "trainingType": {
            "type": "string",
            "description": "Type of training to perform",
            "enum": ["wake_word", "common_commands", "custom_vocabulary", "accent_adaptation"],
            "default": "common_commands"
          },
          "iterations": {
            "type": "number",
            "description": "Number of training iterations",
            "default": 5
          },
          "customWords": {
            "type": "array",
            "description": "Custom vocabulary words to train",
            "items": {"type": "string"}
          }
        }
      }
    },
    {
      "name": "voice_feedback",
      "description": "Configure and control JARVIS voice responses",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Voice feedback action",
            "enum": ["enable", "disable", "configure", "test", "set_voice"]
          },
          "voice": {
            "type": "string",
            "description": "Voice to use for responses",
            "enum": ["system_default", "male", "female", "neutral", "custom"]
          },
          "speed": {
            "type": "number",
            "description": "Speech speed (0.5-2.0)",
            "default": 1.0
          },
          "volume": {
            "type": "number",
            "description": "Voice volume (0.0-1.0)",
            "default": 0.8
          },
          "testPhrase": {
            "type": "string",
            "description": "Phrase to test voice settings with"
          }
        },
        "required": ["action"]
      }
    },
    {
      "name": "voice_shortcuts",
      "description": "Set up voice shortcuts for common commands and workflows",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Shortcut action",
            "enum": ["create", "list", "update", "delete", "test"]
          },
          "phrase": {
            "type": "string",
            "description": "Voice phrase that triggers the shortcut"
          },
          "command": {
            "type": "string",
            "description": "JARVIS command to execute"
          },
          "skill": {
            "type": "string",
            "description": "Target skill for the command"
          },
          "parameters": {
            "type": "object",
            "description": "Parameters for the target command"
          },
          "confirmation": {
            "type": "boolean",
            "description": "Require voice confirmation before execution",
            "default": false
          }
        },
        "required": ["action"]
      }
    },
    {
      "name": "voice_accessibility",
      "description": "Configure voice control for accessibility and special needs",
      "parameters": {
        "type": "object",
        "properties": {
          "feature": {
            "type": "string",
            "description": "Accessibility feature to configure",
            "enum": ["noise_cancellation", "speech_impediment", "quiet_mode", "hearing_assistance", "motor_assistance"]
          },
          "enabled": {
            "type": "boolean",
            "description": "Enable or disable the accessibility feature"
          },
          "sensitivity": {
            "type": "number",
            "description": "Feature sensitivity level (0.1-1.0)",
            "default": 0.5
          },
          "alternativeInput": {
            "type": "string",
            "description": "Alternative input method",
            "enum": ["keyboard_shortcuts", "eye_tracking", "gesture_control", "switch_control"]
          }
        },
        "required": ["feature"]
      }
    },
    {
      "name": "voice_analytics",
      "description": "Analyze voice usage patterns and optimize recognition accuracy",
      "parameters": {
        "type": "object",
        "properties": {
          "analysisType": {
            "type": "string",
            "description": "Type of analysis to perform",
            "enum": ["accuracy", "usage_patterns", "command_frequency", "error_analysis", "optimization_suggestions"],
            "default": "accuracy"
          },
          "timeframe": {
            "type": "string",
            "description": "Time period for analysis",
            "enum": ["hour", "day", "week", "month", "all"],
            "default": "week"
          },
          "includePrivacy": {
            "type": "boolean",
            "description": "Include privacy-sensitive analysis",
            "default": false
          }
        }
      }
    },
    {
      "name": "voice_status",
      "description": "Get current voice control system status and health",
      "parameters": {
        "type": "object",
        "properties": {
          "includeDetails": {
            "type": "boolean",
            "description": "Include detailed system information",
            "default": true
          },
          "testMicrophone": {
            "type": "boolean",
            "description": "Test microphone functionality",
            "default": false
          }
        }
      }
    }
  ]
}