{
  "name": "clipboard-history",
  "version": "1.0.0",
  "description": "Intelligent clipboard history with search, sync, and smart categorization",
  "env": ["JARVIS_CLIPBOARD_MAX_ITEMS", "JARVIS_CLIPBOARD_SYNC_ENABLED", "JARVIS_CLIPBOARD_EXCLUDE_PATTERNS"],
  "tools": [
    {
      "name": "search_clipboard",
      "description": "Search clipboard history by content, type, app, or date",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query - text content, partial match, or regex"
          },
          "type": {
            "type": "string",
            "description": "Filter by clipboard item type",
            "enum": ["text", "image", "file", "url", "email", "phone", "code", "password", "all"],
            "default": "all"
          },
          "app": {
            "type": "string",
            "description": "Filter by source application"
          },
          "limit": {
            "type": "number", 
            "description": "Maximum number of results (default 20)",
            "default": 20
          },
          "dateRange": {
            "type": "string",
            "description": "Date range filter: today, yesterday, this_week, this_month, all",
            "enum": ["today", "yesterday", "this_week", "this_month", "all"],
            "default": "all"
          },
          "includePrivate": {
            "type": "boolean",
            "description": "Include items marked as potentially sensitive",
            "default": false
          }
        }
      }
    },
    {
      "name": "get_clipboard_history",
      "description": "Get recent clipboard items with optional filtering",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "description": "Number of items to return (default 20)",
            "default": 20
          },
          "type": {
            "type": "string", 
            "description": "Filter by item type",
            "enum": ["text", "image", "file", "url", "email", "phone", "code", "password", "all"],
            "default": "all"
          },
          "includePreview": {
            "type": "boolean",
            "description": "Include content preview for items",
            "default": true
          }
        }
      }
    },
    {
      "name": "paste_clipboard_item",
      "description": "Paste a specific clipboard item to active app or specified target",
      "parameters": {
        "type": "object",
        "properties": {
          "itemId": {
            "type": "string",
            "description": "ID of clipboard item to paste"
          },
          "targetApp": {
            "type": "string",
            "description": "Specific app to paste to (optional)"
          },
          "position": {
            "type": "object",
            "description": "Specific position to paste at (x, y coordinates)",
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"}
            }
          }
        },
        "required": ["itemId"]
      }
    },
    {
      "name": "clipboard_operations", 
      "description": "Manage clipboard items: pin, delete, categorize, mark private",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Operation to perform",
            "enum": ["pin", "unpin", "delete", "mark_private", "unmark_private", "categorize", "favorite", "unfavorite"]
          },
          "itemId": {
            "type": "string",
            "description": "ID of clipboard item"
          },
          "category": {
            "type": "string",
            "description": "Category name for categorize action"
          },
          "note": {
            "type": "string", 
            "description": "Optional note/description for the item"
          }
        },
        "required": ["action", "itemId"]
      }
    },
    {
      "name": "monitor_clipboard",
      "description": "Start/stop clipboard monitoring or get monitoring status",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Monitoring action",
            "enum": ["start", "stop", "status", "pause", "resume"],
            "default": "status"
          }
        }
      }
    },
    {
      "name": "clear_clipboard_history",
      "description": "Clear clipboard history with optional filtering",
      "parameters": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Clear specific type of items",
            "enum": ["all", "text", "images", "files", "older_than_week", "older_than_month", "unpinned"]
          },
          "confirm": {
            "type": "boolean", 
            "description": "Confirmation to proceed with clearing",
            "default": false
          }
        },
        "required": ["type", "confirm"]
      }
    },
    {
      "name": "export_clipboard_items",
      "description": "Export clipboard items to file (text, JSON, or HTML format)",
      "parameters": {
        "type": "object",
        "properties": {
          "format": {
            "type": "string",
            "description": "Export format",
            "enum": ["txt", "json", "html", "csv"],
            "default": "txt"
          },
          "filePath": {
            "type": "string",
            "description": "Path to save export file"
          },
          "filter": {
            "type": "object",
            "description": "Filter criteria for export",
            "properties": {
              "type": {"type": "string"},
              "dateRange": {"type": "string"},
              "pinned": {"type": "boolean"}
            }
          }
        }
      }
    },
    {
      "name": "import_clipboard_items",
      "description": "Import clipboard items from file or another source",
      "parameters": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Source type",
            "enum": ["file", "url", "another_device"],
            "default": "file"
          },
          "filePath": {
            "type": "string",
            "description": "Path to import file"
          },
          "merge": {
            "type": "boolean",
            "description": "Merge with existing items or replace",
            "default": true
          }
        },
        "required": ["source"]
      }
    },
    {
      "name": "analyze_clipboard_patterns",
      "description": "Analyze clipboard usage patterns and provide insights",
      "parameters": {
        "type": "object",
        "properties": {
          "timeframe": {
            "type": "string",
            "description": "Analysis timeframe", 
            "enum": ["day", "week", "month", "all"],
            "default": "week"
          },
          "includeApps": {
            "type": "boolean",
            "description": "Include app usage analysis",
            "default": true
          }
        }
      }
    },
    {
      "name": "setup_clipboard_sync",
      "description": "Configure clipboard synchronization across devices",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Sync action",
            "enum": ["enable", "disable", "status", "pair_device", "unpair_device"],
            "default": "status"
          },
          "deviceName": {
            "type": "string",
            "description": "Device name for pairing operations"
          }
        }
      }
    }
  ]
}