{
  "name": "calculator",
  "version": "1.0.0",
  "description": "Advanced calculator with unit conversion, currency, programming calculations, and mathematical functions",
  "env": ["JARVIS_CALC_PRECISION", "JARVIS_CALC_CURRENCY_API_KEY", "JARVIS_CALC_PREFERRED_UNITS"],
  "tools": [
    {
      "name": "calculate",
      "description": "Perform mathematical calculations with support for complex expressions",
      "parameters": {
        "type": "object",
        "properties": {
          "expression": {
            "type": "string",
            "description": "Mathematical expression to evaluate (e.g., '2 + 3 * 4', 'sqrt(144)', 'sin(45)')"
          },
          "precision": {
            "type": "number",
            "description": "Number of decimal places for result (default 10)",
            "default": 10
          },
          "format": {
            "type": "string",
            "description": "Result format",
            "enum": ["decimal", "fraction", "scientific", "engineering", "binary", "hex", "octal"],
            "default": "decimal"
          },
          "degrees": {
            "type": "boolean",
            "description": "Use degrees for trigonometric functions (default true)",
            "default": true
          }
        },
        "required": ["expression"]
      }
    },
    {
      "name": "convert_units",
      "description": "Convert between different units of measurement",
      "parameters": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "Value to convert"
          },
          "fromUnit": {
            "type": "string",
            "description": "Source unit (e.g., 'miles', 'kg', 'fahrenheit', 'liters')"
          },
          "toUnit": {
            "type": "string",
            "description": "Target unit (e.g., 'km', 'pounds', 'celsius', 'gallons')"
          },
          "precision": {
            "type": "number",
            "description": "Decimal places in result (default 6)",
            "default": 6
          }
        },
        "required": ["value", "fromUnit", "toUnit"]
      }
    },
    {
      "name": "convert_currency",
      "description": "Convert between currencies with live exchange rates",
      "parameters": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "description": "Amount to convert"
          },
          "fromCurrency": {
            "type": "string",
            "description": "Source currency code (e.g., 'USD', 'EUR', 'GBP')"
          },
          "toCurrency": {
            "type": "string",
            "description": "Target currency code"
          },
          "historical": {
            "type": "string",
            "description": "Historical date for rates (YYYY-MM-DD format, optional)"
          }
        },
        "required": ["amount", "fromCurrency", "toCurrency"]
      }
    },
    {
      "name": "programming_calc",
      "description": "Programming calculations: binary, hex, bitwise operations, number base conversions",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "Type of programming calculation",
            "enum": ["base_convert", "bitwise", "bit_shift", "bit_count", "two_complement", "float_info"]
          },
          "value": {
            "type": "string",
            "description": "Input value (can be decimal, binary 0b1010, hex 0xFF, octal 0o77)"
          },
          "secondValue": {
            "type": "string",
            "description": "Second value for bitwise operations"
          },
          "operation_type": {
            "type": "string",
            "description": "Specific operation for bitwise category",
            "enum": ["and", "or", "xor", "not", "left_shift", "right_shift"]
          },
          "targetBase": {
            "type": "string",
            "description": "Target number base for conversion",
            "enum": ["binary", "octal", "decimal", "hexadecimal", "base36", "all"]
          },
          "bitWidth": {
            "type": "number",
            "description": "Bit width for operations (8, 16, 32, 64)",
            "default": 32
          }
        },
        "required": ["operation", "value"]
      }
    },
    {
      "name": "date_time_calc",
      "description": "Date and time calculations: differences, additions, timezone conversions",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "Type of date/time calculation",
            "enum": ["difference", "add_subtract", "timezone_convert", "format_convert", "age_calculate", "business_days"]
          },
          "date1": {
            "type": "string",
            "description": "First date (various formats accepted)"
          },
          "date2": {
            "type": "string",
            "description": "Second date or time zone for operations"
          },
          "amount": {
            "type": "number",
            "description": "Amount to add/subtract"
          },
          "unit": {
            "type": "string",
            "description": "Time unit",
            "enum": ["seconds", "minutes", "hours", "days", "weeks", "months", "years"]
          },
          "fromTimezone": {
            "type": "string",
            "description": "Source timezone (e.g., 'UTC', 'EST', 'America/New_York')"
          },
          "toTimezone": {
            "type": "string",
            "description": "Target timezone"
          },
          "outputFormat": {
            "type": "string",
            "description": "Output format for dates",
            "default": "YYYY-MM-DD HH:mm:ss"
          }
        },
        "required": ["operation"]
      }
    },
    {
      "name": "statistics_calc",
      "description": "Statistical calculations: mean, median, standard deviation, etc.",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "Statistical operation",
            "enum": ["descriptive", "regression", "probability", "distribution", "hypothesis_test"]
          },
          "data": {
            "type": "array",
            "description": "Array of numbers for calculation",
            "items": {"type": "number"}
          },
          "dataX": {
            "type": "array",
            "description": "X values for regression",
            "items": {"type": "number"}
          },
          "dataY": {
            "type": "array",
            "description": "Y values for regression", 
            "items": {"type": "number"}
          },
          "confidence": {
            "type": "number",
            "description": "Confidence level (0.90, 0.95, 0.99)",
            "default": 0.95
          },
          "distribution_type": {
            "type": "string",
            "description": "Distribution type for probability calculations",
            "enum": ["normal", "binomial", "poisson", "exponential", "uniform"]
          }
        },
        "required": ["operation"]
      }
    },
    {
      "name": "financial_calc",
      "description": "Financial calculations: interest, loans, investments, returns",
      "parameters": {
        "type": "object",
        "properties": {
          "calculation": {
            "type": "string", 
            "description": "Type of financial calculation",
            "enum": ["compound_interest", "loan_payment", "present_value", "future_value", "roi", "break_even", "mortgage", "investment_growth"]
          },
          "principal": {
            "type": "number",
            "description": "Principal amount or initial investment"
          },
          "rate": {
            "type": "number",
            "description": "Interest rate (as decimal: 0.05 for 5%)"
          },
          "time": {
            "type": "number",
            "description": "Time period in years"
          },
          "payment": {
            "type": "number",
            "description": "Payment amount for loan calculations"
          },
          "compounding": {
            "type": "string",
            "description": "Compounding frequency",
            "enum": ["annually", "semiannually", "quarterly", "monthly", "weekly", "daily", "continuously"],
            "default": "annually"
          },
          "loanAmount": {
            "type": "number",
            "description": "Total loan amount"
          },
          "termYears": {
            "type": "number", 
            "description": "Loan term in years"
          }
        },
        "required": ["calculation"]
      }
    },
    {
      "name": "scientific_calc",
      "description": "Advanced scientific calculations and constants",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "Type of scientific calculation",
            "enum": ["constants", "physics_formula", "chemistry_calc", "engineering_calc", "logarithms", "trigonometry"]
          },
          "constant": {
            "type": "string",
            "description": "Physical constant name (pi, e, c, g, h, etc.)"
          },
          "formula": {
            "type": "string",
            "description": "Physics formula to calculate",
            "enum": ["kinetic_energy", "potential_energy", "force", "acceleration", "momentum", "power", "frequency", "wavelength"]
          },
          "values": {
            "type": "object",
            "description": "Input values for formula calculations",
            "additionalProperties": {"type": "number"}
          },
          "precision": {
            "type": "number",
            "description": "Decimal precision for scientific results",
            "default": 15
          }
        },
        "required": ["operation"]
      }
    },
    {
      "name": "solve_equation",
      "description": "Solve mathematical equations and systems of equations",
      "parameters": {
        "type": "object",
        "properties": {
          "equation": {
            "type": "string",
            "description": "Equation to solve (e.g., 'x^2 - 5x + 6 = 0', '2x + 3y = 7')"
          },
          "equations": {
            "type": "array",
            "description": "System of equations to solve",
            "items": {"type": "string"}
          },
          "variable": {
            "type": "string", 
            "description": "Variable to solve for (default 'x')",
            "default": "x"
          },
          "method": {
            "type": "string",
            "description": "Solving method",
            "enum": ["analytical", "numerical", "graphical"],
            "default": "analytical"
          },
          "domain": {
            "type": "object",
            "description": "Domain restrictions for solutions",
            "properties": {
              "min": {"type": "number"},
              "max": {"type": "number"}
            }
          }
        }
      }
    },
    {
      "name": "calc_history",
      "description": "Manage calculation history and saved results",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "History action",
            "enum": ["list", "save", "load", "clear", "export"],
            "default": "list"
          },
          "name": {
            "type": "string",
            "description": "Name for saved calculation"
          },
          "limit": {
            "type": "number",
            "description": "Number of history items to return",
            "default": 20
          },
          "filter": {
            "type": "string",
            "description": "Filter history by calculation type or content"
          }
        }
      }
    },
    {
      "name": "quick_reference",
      "description": "Get quick reference for mathematical formulas, constants, and conversions",
      "parameters": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "Reference topic",
            "enum": ["formulas", "constants", "conversions", "shortcuts", "examples"],
            "default": "formulas"
          },
          "category": {
            "type": "string",
            "description": "Specific category within topic",
            "enum": ["geometry", "algebra", "calculus", "physics", "chemistry", "finance", "statistics", "programming"]
          },
          "search": {
            "type": "string",
            "description": "Search term for specific reference"
          }
        },
        "required": ["topic"]
      }
    }
  ]
}